        {#                        class="embed-video"></iframe> #}

        {#                    {{ form_row(videoForm.vars.button_delete, { label: 'X', attr: #}
        {#                        { #}
        {#                            class: 'delete delete-video-upload', #}
        {#                            'data-video-preview-target': 'deleteButton', #}
        {#                            'data-item-id-param': key #}
        {#                        } #}
        {#                    }) }} #}
        {#                </div> #}
        {#            {% endfor %} #}
        {#            {{ form_widget(form.videos.vars.button_add, { label: '+ Add video', attr: {class: 'button button-secondary my-3'} }) }} #}
        {#        </div> #}
    </div>
    {{ form_end(form, {'render_rest': false}) }}
</div>
