{% extends 'app/pages/security/_security_layout.html.twig' %}

{% block title %}{{ siteName }} -Reset your password{% endblock %}

{% block security %}
    <h3 class="text-center border-bottom mb-4">Nouveau mot de passe</h3>

    {{ form_start(resetForm) }}
        {{ form_row(resetForm.password) }}
    <div class="text-center">
        <button class="button button-secondary">Modifier</button>
    </div>
    {{ form_end(resetForm) }}
{% endblock %}
